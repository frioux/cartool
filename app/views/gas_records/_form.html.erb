<h1><%= title %></h1>

<%= error_messages_for :gas_record %>

<% form_for(@gas_record) do |f| %>
  <p>
    <b>Gallons</b><br />
    <%= f.text_field :gallons %>
  </p>

  <p>
    <b>Odometer reading</b><br />
    <%= f.text_field :odometer_reading %>
  </p>

  <p>
    <b>Date</b><br />
    <%= f.date_select :date %>
  </p>

  <p>
  <b>Gas type</b><br />
  <%= select( "gas_record", "gas_type_id", GasType.find(:all).map{|w| [w.name, w.id]}, {:include_blank => "" }) %>
  </p>

  <p>
  <b>Gas vendor</b><br />

  <%= select( "gas_record", "gas_vendor_id", GasVendor.find(:all).map{|w| [w.name, w.id]}, {:include_blank => "" }) %>
  </p>

  <p>
  <b>Gas price</b><br />
  <%= f.text_field :price %>

  </p>

  <p>
    <%= f.submit submit_string %>
  </p>
<% end %>
